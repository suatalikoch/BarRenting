@model IEnumerable<Bar>

@{
    ViewData["Title"] = "Bars";
}

<h1>All Bars</h1>

<p>
    <a class="btn btn-sm btn-success" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <colgroup>

            <!-- Define column widths -->
            <col style="width: auto;" />
            <col style="width: auto;" />
            <col style="width: 55%;" />
            <col style="width: auto;" />
        </colgroup>
        <thead class="thead-dark align-middle">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img style="width: 128px; height: 128px; object-fit: cover" src="@Html.DisplayFor(modelItem => item.ImageLocation)" alt="Bar Image" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
